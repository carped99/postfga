# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# C/C++ files
[*.{c,h,cpp,hpp,cc,hh,cxx,hxx}]
indent_style = space
indent_size = 4
max_line_length = 120

# PostgreSQL extension control files
[*.control]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 4

# Makefile
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# CMake
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# Proto files
[*.proto]
indent_style = space
indent_size = 2
